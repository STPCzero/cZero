<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "=//mybatis.org//DTO Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kopo.poly.persistance.mapper.INewsMapper">
    <insert id="InsertNews_Info" parameterType="NewsDTO">
        INSERT INTO NEWS_INFO
            (
             COLLECT_TIME,
             NEWS_SEQ,
             NEWS_TITLE,
             NEWS_DEPARTMENT,
             NEWS_DATE,
             NEWS_URL
            )
            VALUES
                   (
                    #{collect_time},
                   (SELECT NVL(MAX(A.news_seq),0)+1 FROM NEWS_INFO A WHERE A.COLLECT_TIME = #{collect_time}),
                   #{news_title},
                   #{news_department},
                   #{news_date},
                   #{news_url}
                  )
    </insert>
    <select id="ShowNews_Info" parameterType="NewsDTO" resultType="NewsDTO">
        select *
        from NEWS_INFO
        where

    </select>
</mapper>